<!-- "kabob" component  -->

{% assign default_style_modifier = 'light' %}
{% assign default_flags = '' %}

<!-- assign default for include here  -->
{% if component_name == nil %}
    {% assign component_name = 'kabob' %}
{% endif %}

{% if kabob_left_icon == nil %}
    {% assign kabob_left_icon = 'divider-left' %}
{% endif %}

<div class="c-{{ component_name }} c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }} {{ flags | default: default_flags }}{% if reflect %} --reflect{% endif %}">
    <div class="c-{{ component_name }}__left c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }}__left">
        {% include 'svg-definitions' with kabob_left_icon  %}
    </div>
    <div class="c-{{ component_name }}__center c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }}__center">
        <div class="c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }}__inner">
            {% if kabob_label %}
                <span>{{ kabob_label | escape }}</span>
            {% endif %}
        </div>
    </div>
    {% if reflect %}
        <div class="c-{{ component_name }}__right c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }}__right">
            {% include 'svg-definitions' with kabob_left_icon  %}
        </div>
    {% elsif kabob_right_icon %}
        <div class="c-{{ component_name }}__right c-{{ component_name }}--{{ style_modifier | default: default_style_modifier }}__right">
            {% include 'svg-definitions' with kabob_right_icon  %}
        </div>
    {% endif %}
</div>

<!-- reset all variables cuz liquids scoping is dum? -->
{% assign style_modifier = nil %}
{% assign flags = nil %}
{% assign reflect = nil %}
{% assign kabob_right_icon = nil %}
{% assign kabob_left_icon = nil %}
{% assign component_name = nil %}