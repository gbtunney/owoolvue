{% assign default_component_id = 'icon' %}
{% assign default_style_modifier = 'dark' %}
{% assign default_flags = '' %}
{% assign default_icon = 'plus' %}

<div class="c-{{ component_id |  default: default_component_id }} c-{{ component_id |  default: default_component_id }}--{{ style_modifier | default: default_style_modifier }}  {{ flags | default: default_flags }}">
			{% if icon_name != empty %}
				{% include 'svg-definitions' with icon_name %}
			{% else %}
				{%  include 'svg-definitions' with  default_icon %}
			{% endif %}
</div>

